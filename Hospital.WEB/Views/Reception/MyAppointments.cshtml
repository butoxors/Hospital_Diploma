@model IEnumerable<Hospital.BL.DTO.ReceptionDTO>

@{
    ViewData["Title"] = "MyAppoinments";
}

<h1>My appoinments</h1>
<table class="table table-hover">

    <thead>
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Duration of appointment</th>
            <th scope="col">Number of room</th>
            <th scope="col">Doctor</th>
            <th scope="col">Appointment status</th>
        </tr>
    </thead>
    @foreach (var reception in Model)
    {
        var classForTR = "";
        if (reception.ReceptionStatus == Hospital.BL.DTO.ReceptionStatus.VISITED)
        {
            classForTR = "table-success";
        }
        if (reception.ReceptionStatus == Hospital.BL.DTO.ReceptionStatus.NOT_VISITED)
        {
            classForTR = "table-secondary";
        }
        if (reception.ReceptionStatus == Hospital.BL.DTO.ReceptionStatus.CANCELED)
        {
            classForTR = "table-danger";
        }
        <tbody>
            <tr class="@classForTR">
                <th>@reception.ReceptionDateTime</th>
                <th>@reception.ReceptionDuration</th>
                <th>@reception.RoomNumber</th>
                <th>@reception.Doctor</th>
                <th>@reception.ReceptionStatus</th>
            </tr>
        </tbody>
    }
</table>